{
    "prepare": {},
    "compile": {
        "typescript": {
            "task": "ts",
            "package": "grunt-ts@6.0.0-beta.16",
            "dependencies": [
                "typescript@2.4.2"
            ],
            "default": {
                "options": {
                    "target": "es6",
                    "module": "commonjs",
                    "moduleResolution": "node",
                    "declaration": false,
                    "noImplicitAny": true,
                    "suppressImplicitAnyIndexErrors": true,
                    "removeComments": false,
                    "noLib": false,
                    "emitDecoratorMetadata": true,
                    "experimentalDecorators": true,
                    "sourceMap": true,
                    "jsx": "react",
                    "fast": "never"
                },
                "src": "<%= config.sources.TypeScript.files %>"
            }
        },
        "browser": {
            "task": "browserify",
            "package": "grunt-browserify",
            "dependencies": [
                "babelify"
            ],
            "web": {
                "files": [
                    {
                        "expand": true,
                        "cwd": "<%= config.sources.JavaScript.public %>/",
                        "src": [
                            "**/*app.js"
                        ],
                        "dest": "<%= config.deployables['browser-js'] %>"
                    }
                ],
                "options": {
                    "transform": [
                        "babelify"
                    ]
                }
            }
        }
    },
    "test": {
        "typescript": {
            "test-and-coverage": {
                "task": "mocha_istanbul",
                "package": "grunt-mocha-istanbul",
                "dependencies": [
                    "istanbul",
                    "mocha@3.0.1",
                    "chai",
                    "sinon"
                ],
                "test": {
                    "options": {
                        "mochaOptions": [
                            "--reporter",
                            "spec",
                            "--require",
                            "babel-register"
                        ],
                        "reportFormats": [
                            "lcovonly"
                        ]
                    },
                    "src": [
                        "<%= config.sources.TypeScript.tests.unit %>"
                    ]
                }
            },
            "integration-tests": {
                "task": "cucumberjs",
                "package": "grunt-cucumberjs",
                "dependencies": [
                    "cucumber",
                    "chai"
                ],
                "options": {
                    "format": "pretty"
                },
                "features" : []
            }
        }
    }
}